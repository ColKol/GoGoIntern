<!DOCTYPE html>
<html>
    <head>
        <title>Register Rayreader</title>
        <link rel = "stylesheet" href = "/css/register.css" type = "text/css">
    </head>

    <body>
        <h1>Register Account</h1>
        <% if (errors.length > 0){%>
            <% errors.forEach(function(error){ %>
                <h3 style="border: 0.5rem solid rgb(234, 155, 168); background-color: rgb(244, 127, 127); color: whitesmoke; width: 40vw"><%= error %></h3>
            <%}); %>
        <%} %>
        <form action = "/users/register/newUser" method="POST">
        <div>

            <label for = "name"><%= username %></label>
            <input type = "text" id = "name" name = "name" placeholder = "Enter <%= username %>" required>

            <label for = "email">Email</label>
            <input type = "email" id = "email" name = "email" placeholder = "Enter email" required>

            <label for = "password">Password</label>
            <input type = "password" id = "password" name = "password" placeholder = "Enter password" required>
        </div>
        <button type = "submit">Register Account</button>
        </form>
        <a href = "/users/login">Login</a>
        <a href = "/auth/google">Register using google</a>
    </body>
</html>